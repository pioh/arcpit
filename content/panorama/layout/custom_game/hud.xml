<root>
    <styles>
        <include src="file://{resources}/styles/custom_game/hud.css" />
    </styles>
    
    <scripts>
        <include src="file://{resources}/scripts/custom_game/hud.js" />
    </scripts>

    <!-- Важно: этот оверлей не должен перехватывать мышь, иначе пропадают тултипы/ховеры дефолтного HUD (способности, предметы). -->
    <Panel class="HudRoot" hittest="false">
        <Panel id="PlayersBar" class="PlayersBar" />
        <Panel id="RoundPanel" class="RoundPanel">
            <Label id="RoundLabel" class="RoundLabel" text="" />
            <Label id="RoundTimer" class="RoundTimer" text="" />
        </Panel>
        <Panel id="StagePanel" class="StagePanel">
            <Panel class="StageContent">
                <Label id="StageTitle" class="StageTitle" text="" />
                <Label id="StageTimer" class="StageTimer" text="" />
            </Panel>
        </Panel>
    </Panel>
</root>

